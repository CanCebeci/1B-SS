         <Button fx:id="discardPile" layoutX="950.0" layoutY="470.0" mnemonicParsing="false" onAction="#showDiscardPile" prefHeight="134.0" prefWidth="91.0" text="Discard Pile" />
         <Label fx:id="numDraw" layoutX="79.0" layoutY="565.0" text="Label" />
         <Label fx:id="numDiscard" layoutX="1018.0" layoutY="565.0" text="Label" />
      </children></AnchorPane>
</Scene>
