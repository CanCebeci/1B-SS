<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CombatUIController">
    <AnchorPane prefHeight="729.0" prefWidth="1042.0">
      <children>
         <ImageView fitHeight="768.0" fitWidth="1126.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@combatBackground.jpg" />
            </image>
         </ImageView>
         <Button layoutX="1041.0" layoutY="424.0" mnemonicParsing="false" onAction="#endTurn" text="End Turn" />
         <FlowPane fx:id="enemies" layoutX="242.0" layoutY="146.0" prefHeight="315.0" prefWidth="794.0" />
         <FlowPane fx:id="hand" layoutX="194.0" layoutY="470.0" prefHeight="218.0" prefWidth="743.0" />
         <Button layoutX="1043.0" layoutY="45.0" mnemonicParsing="false" onAction="#backToMap" text="back" />
         <AnchorPane layoutX="13.0" layoutY="125.0" prefHeight="366.0" prefWidth="155.0">
            <children>
               <ImageView fitHeight="279.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@character.jpg" />
                  </image>
               </ImageView>
               <Label fx:id="playerHP" alignment="CENTER" layoutY="190.0" prefHeight="47.0" prefWidth="167.0" text="HP" textFill="WHITE" wrapText="true" />
